{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true,
    "jasmine": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "jest"
  ],
  "rules": {
    "no-mixed-spaces-and-tabs": "warn",
    "no-unused-vars": "warn",
    "no-case-declarations": "warn"
  }
}
